import KurzLayout from '../layouts/Kurz.astro';
import MapaSkolici from '../components/MapaSkolici.astro';


const program = [
    {
        name: '1. Lekce',
        heading: 'Doplníme',
        text: 'Doplníme'
    },
    {
        name: '2. Lekce',
        heading: 'Doplníme',
        text: 'Doplníme'
    },
    {
        name: '3. Lekce',
        heading: 'Doplníme',
        text: 'Doplníme'
    },
    {
        name: '4. Lekce',
        heading: 'Doplníme',
        text: 'Doplníme'
    },
    {
        name: '5. Lekce',
        heading: 'Doplníme',
        text: 'Doplníme'
    },
    {
        name: '6. Lekce',
        heading: 'Doplníme',
        text: 'Doplníme'
    },
